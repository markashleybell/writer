<?xml version="1.0"?>
<SyntaxDefinition name="Writer" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
    <Color name="Adverb" background="LightBlue" />
    <Color name="PassiveVoice" background="LightGreen" />
    <RuleSet>
        <Rule color="PassiveVoice">
            \b(is|are|was|were|be|been|being)\s([a-z]{2,30})\b(\sby\b)?
        </Rule>
        <Rule color="Adverb">
            \b[a-z]+ly
        </Rule>
    </RuleSet>
</SyntaxDefinition>
